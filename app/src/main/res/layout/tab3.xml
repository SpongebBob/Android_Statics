<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">



    <View
        android:layout_width="fill_parent"
        android:layout_height="1px"
        android:background="?android:attr/listDivider"
        />



    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="true"
        android:id="@+id/date_line"
        android:layout_margin="12dp"

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/setstartdate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="3"
            android:id="@+id/setstartdatetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false" />
    </LinearLayout>

    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="true"        android:id="@+id/date_line2"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/setstartdate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <EditText
            android:layout_weight="3"
            android:id="@+id/setfinishdatetxt"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:focusable="false" />
    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="8px"
        android:background="?android:attr/listDivider" />

    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="false"
        android:id="@+id/statics_show2"
        android:layout_margin="12dp"

        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/newkh"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txshow2"
            android:text="0人"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="false"
        android:id="@+id/statics_show3"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/newlxr"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txshow3"
            android:text="0人"

            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="false"
        android:id="@+id/statics_show4"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/bfcsh"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txshow4"
            android:layout_weight="1"
            android:text="0人"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />
    <LinearLayout
        android:focusable="true"  android:focusableInTouchMode="false"
        android:id="@+id/statics_show"
        android:layout_margin="12dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/missoncomplete"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/txshow1"
            android:layout_weight="1"
            android:text="0个"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:layout_width="fill_parent"
        android:layout_height="2px"
        android:background="?android:attr/listDivider" />


</LinearLayout>